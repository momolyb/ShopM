<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_pass_1"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:hint="_"/>

        <TextView
            android:id="@+id/tv_pass_2"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:hint="_"/>

        <TextView
            android:id="@+id/tv_pass_3"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:hint="_"/>

        <TextView
            android:id="@+id/tv_pass_4"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:hint="_"/>
    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:useDefaultMargins="true"
        android:columnCount="3"
        android:rowCount="4">

        <TextView
            android:id="@+id/num_1"
            style="@style/PassWordView"
            android:text="1" />

        <TextView
            android:id="@+id/num_2"
            style="@style/PassWordView"
            android:text="2" />

        <TextView
            android:id="@+id/num_3"
            style="@style/PassWordView"
            android:text="3" />

        <TextView
            android:id="@+id/num_4"
            style="@style/PassWordView"
            android:text="4" />

        <TextView
            android:id="@+id/num_5"
            style="@style/PassWordView"
            android:text="5" />

        <TextView
            android:id="@+id/num_6"
            style="@style/PassWordView"
            android:text="6" />

        <TextView
            android:id="@+id/num_7"
            style="@style/PassWordView"
            android:text="7" />

        <TextView
            android:id="@+id/num_8"
            style="@style/PassWordView"
            android:text="8" />

        <TextView
            android:id="@+id/num_9"
            style="@style/PassWordView"
            android:text="9" />

        <TextView
            android:id="@+id/num_e"
            style="@style/PassWordView"
            android:text="Enter" />

        <TextView
            android:id="@+id/num_0"
            style="@style/PassWordView"
            android:text="0" />

        <TextView
            android:id="@+id/num_b"
            style="@style/PassWordView"
            android:text="Del" />
    </GridLayout>
</LinearLayout>